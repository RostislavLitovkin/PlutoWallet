<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoWallet.Components.HydraDX.AssetLiquidityView"
             x:Name="view">
    <Border StrokeThickness="0"
            BackgroundColor="#041b47"
            Padding="10, 0, 10, 0">
        <Border.Shadow>
            <Shadow Brush="Black"
                    Offset="0,2" 
                    Radius="3"
                    Opacity="0.1" />

        </Border.Shadow>
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15" />

        </Border.StrokeShape>
        <VerticalStackLayout>
            <Grid HeightRequest="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="amountLabel"
                   TextColor="#dddddd"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Center" />
                <Label x:Name="symbolLabel"
                   TextColor="#dddddd"
                   HorizontalTextAlignment="Start"
                   VerticalTextAlignment="Center"
                   Margin="5, 0, 0, 0"
                   Grid.Column="1"/>

                <Label x:Name="usdLabel"
                   TextColor="#dddddd"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Center"
                   Grid.Column="3"/>
            </Grid>
            <VerticalStackLayout
                BindableLayout.ItemsSource="{Binding LiquidityMiningInfos}"
                 Spacing="0">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Grid HeightRequest="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Amount}"
                                   TextColor="LightYellow"
                                   HorizontalTextAlignment="End"
                                   VerticalTextAlignment="Center" />
                            <Label Text="{Binding Symbol}"
                                   TextColor="LightYellow"
                                   HorizontalTextAlignment="Start"
                                   VerticalTextAlignment="Center"
                                   Margin="5, 0, 0, 0"
                                   Grid.Column="1"/>

                            <Label Text="{Binding UsdValue}"
                                   TextColor="#dddddd"
                                   HorizontalTextAlignment="End"
                                   VerticalTextAlignment="Center"
                                   Grid.Column="3"/>
                        </Grid>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Border>
</ContentView>

