<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlutoWallet.Components.WebView.AdvancedWebView"
             x:Name="view"
             HeightRequest="600"
             MaximumHeightRequest="600" BackgroundColor="Red"
             >
    <Frame HeightRequest="600"
           MaximumHeightRequest="600"
           CornerRadius="0"
           Padding="0"
           BackgroundColor="White"
           BorderColor="White">
        <ScrollView HeightRequest="600"
                MaximumHeightRequest="600" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <WebView WidthRequest="{Binding Source={x:Reference view}, Path=Width}"
                         BackgroundColor="White"
                         x:Name="webView"
                     />
            </Grid>

        </ScrollView>
    </Frame>
</ContentView>

